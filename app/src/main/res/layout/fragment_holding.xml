<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoldingFragment"
    android:background="@drawable/geminibac">

    <!-- TODO: Update blank fragment layout -->



    <EditText
        android:id="@+id/hold_reason"
        android:layout_width="352dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="493dp"
        android:autofillHints=""
        android:background="@drawable/edittext_border"
        android:gravity="center_horizontal"
        android:hint="@string/enter_reason"
        android:inputType="text" />

    <EditText
        android:id="@+id/scale_barcode"
        android:layout_width="355dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:autofillHints=""
        android:hint="@string/enter_barcode"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="657dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonTempScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="596dp"
        android:backgroundTint="@color/purple_300"
        android:text="@string/scan_barcode"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonHoldSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="432dp"
        android:text="@string/submit_bale"
        android:backgroundTint="@color/purple_300"
        android:textColor="#FFFFFF"/>

</RelativeLayout>